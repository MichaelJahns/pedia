<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/minWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/weightMinus200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/currentWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/weightPlus300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/weightPlus500"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/weightPlus700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.example.pedia.view.custom.VariableFontRow
        android:id="@+id/maxWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>